<!DOCTYPE html>

@{
    var errorCode = ViewData["ErrorCode"];
    Dictionary<string, string> errorMessage = new Dictionary<string, string>();

    // Add some elements to the dictionary. There are no
    // duplicate keys, but some of the values are duplicates.
    errorMessage.Add("404", "Request Resource Not Found");
    errorMessage.Add("401", "Unauthorized Access, You are not logged in");
    errorMessage.Add("403", "Forbidden Access");
}

<link rel="stylesheet" href="~/css/errorSheet.css" />

<div id="clouds">
    <div class="cloud x1"></div>
    <div class="cloud x1_5"></div>
    <div class="cloud x2"></div>
    <div class="cloud x3"></div>
    <div class="cloud x4"></div>
    <div class="cloud x5"></div>
</div>
<div class='c'>
    <div class="container">

        <h3 class='_404 mt-5'>ERROR @errorCode</h3>
        <hr>
        <div class='_2'>@errorMessage[errorCode.ToString()]</div>

        <div class="row">
            <div class="col-sm-3 mt-4" style="margin-left:auto;margin-right:auto;">
                @if (errorCode.ToString() == "404")
                {
                <a class='btn' href='#'>BACK TO HOME</a>
                }
                else if (errorCode.ToString() == "401")
                {
                <a class='btn' href='#'>Go To Login</a>
                }
            </div>
        </div>
    </div>
</div>