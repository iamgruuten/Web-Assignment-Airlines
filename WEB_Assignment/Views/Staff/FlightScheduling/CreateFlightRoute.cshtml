@model WEB_Assignment.Models.FlightSchedule.FlightRoute

@{
    ViewData["Title"] = "Create Flight Route";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-9 p-3 m-3" style="background-color: #f0f0f0; border-radius: 20px">

            <h1 class="mt-3 mb-5 text-center">Create Flight Route</h1>

            <form asp-action="CreateFlightRoute">
                <fieldset class="FormContent">

                    <div class="form-group row justify-content-center">
                        <label asp-for="DepartureCity"
                               class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="DepartureCity" class="form-control" />
                            <span asp-validation-for="DepartureCity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="DepartureCountry"
                               class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="DepartureCountry" class="form-control" />
                            <span asp-validation-for="DepartureCountry" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="ArrivalCity"
                               class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="ArrivalCity" class="form-control" />
                            <span asp-validation-for="ArrivalCity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="ArrivalCountry"
                               class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="ArrivalCountry" class="form-control" />
                            <span asp-validation-for="ArrivalCountry" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="FlightDuration"
                               class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="FlightDuration" class="form-control" />
                            <span asp-validation-for="FlightDuration" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <div class="col-md-8 text-right">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                    <div>
                        <a asp-action="ViewFlightRoutes">Back to List</a>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>