@model IEnumerable<WEB_Assignment.Models.FlightSchedule.FlightRoute>

@{
    ViewData["Title"] = "View Flight Routes";
}

<div class="container-fluid">

    <!--Header area-->
    <div class="row m-4 justify-content-end text-center">
        <h3 class="col-4">View Flight Routes</h3>
        <div class="col-4 text-right">
            <a class="btn btn-primary" asp-controller="Staff" asp-action="CreateFlightRoute">+ Create New Flight Route</a>
        </div>
    </div>

    @if (Model.ToList().Count > 0)
    {
        <!--Header area-->
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Route ID</th>
                        <th scope="col">Departure City/Country</th>
                        <th scope="col">Arrival City/Country</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Flight Schedules</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.RouteID.ToString()</th>
                            <td>@(item.DepartureCity + ", " + item.DepartureCountry)</td>
                            <td>@(item.ArrivalCity + ", " + item.ArrivalCountry)</td>
                            <td>@item.FlightDuration h</td>
                            <td><a asp-controller="Staff" asp-action="ViewFlightSchedule" asp-route-routeId="@item.RouteID">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h3>No Flight Routes have been created.</h3>
    }
</div>