@model WEB_Assignment.Models.StaffViewModel

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/Package3.css" />
</head>
<h4 class="PageTitle">Delete Staff Record</h4>
<body>
    <div class="row box">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <form asp-action="Delete">
                <fieldset class="FormContent">
                    <div class="form-group row">
                        <label asp-for="StaffID"
                               class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3">
                            <input asp-for="StaffID" readonly
                                   class="form-control-plaintext" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Vocation"
                               class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3">
                            <input asp-for="Vocation" readonly
                                   class="form-control-plaintext" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="StaffName"
                               class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3">
                            <input asp-for="StaffName" readonly
                                   class="form-control-plaintext" />
                        </div>
                    </div>
                    <div class="form-group row btn-div">
                        <div class="col-sm-5">
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <a asp-action="ViewAllPersonnelAndFlightAssigned" asp-controller="Staff">Back to List</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</body>