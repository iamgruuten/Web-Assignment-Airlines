@model WEB_Assignment.Models.StaffViewModel

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/Package3.css" />
</head>
<
<h4 class="PageTitle">View Staff Details</h4>
<body>
    <div class="row box">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <form asp-action="Details">
                <fieldset class="FormContent">
                    <div class="form-group row">
                        <label asp-for="StaffID"
                               class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("StaffID")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="StaffName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("StaffName")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Vocation" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("Vocation")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("Gender")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="dateOfemployed" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("dateOfemployed")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="emailAddress" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("emailAddress")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="status" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("status")
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-5">
                            <a asp-action="Edit" asp-controller="Staff" asp-route-id="@Model.StaffID">Change Status</a>
                            <a asp-action="ViewAllPersonnelAndFlightAssigned" asp-controller="Staff">Back to List</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</body>