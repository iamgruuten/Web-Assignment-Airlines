@model IEnumerable<WEB_Assignment.Models.FlightDetailsModel>

@{
    ViewData["Title"] = "View Booking";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<body>
    <div class="col-sm-12 padding-rmv">
        <img src="~/images/loginbg.jpeg" class="img-fluid w-100" />
        <div class="container" id="mainContainer">

            <div class="flex-container">
                <h1 class="bottom-left">Bookings</h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @if (Model.Count() != 0)
        {
        @foreach (var booking in Model)
            {
        <div class="container mt-3 bookingStyle">
            <div class="row mt-3">
                <div class="form-group mb-1 col-sm-4">
                    <label class="control-label">@Html.DisplayNameFor(model => model.flightModel)</label>
                    <h4>@booking.flightModel</h4>
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group mb-1 col-sm-6">
                    <label class="control-label">@Html.DisplayNameFor(model => model.departureCity) - @booking.departureCountry, @booking.departureCity</label>
                    <h4>@booking.departureCity - @booking.departureTime.ToShortTimeString(), @booking.arrivalTime.ToString("dd/MM/yyyy")</h4>
                </div>
                <div class="form-group mb-1 col-sm-6">
                    <label class="control-label">@Html.DisplayNameFor(model => model.arrivalCity) - @booking.arrivalCountry, @booking.arrivalCity</label>
                    <h4>@booking.arrivalCity - @booking.arrivalTime.ToShortTimeString(), @booking.arrivalTime.ToString("dd/MM/yyyy")</h4>
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group mb-1 col-sm-9">
                </div>
                <div class="form-group mb-1 col-sm-3 mb-4">
                    <a class="btn btn-default" style="height: auto;" asp-action="viewBookingPassengers" asp-controller="Customer" asp-route-scheduleID="@booking.scheduleid">SELECT BOOKING</a>
                </div>
            </div>
        </div>
        <hr />
            }
        }
        else
        {
        <div class="container">
            <h2 class="mt-3 mb-4 text-center">No Booking Found!</h2>
        </div>
        }
    </div>
</body>